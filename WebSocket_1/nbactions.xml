                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address} -classpath %classpath com.springessentialsbook.chapter4.EchoWebSocketBootApplication spring-boot:run -Dserver.port=8090</exec.args>
                <exec.executable>java</exec.executable>
                <jpda.listen>true</jpda.listen>
